package  {		import flash.display.MovieClip;	import flash.events.Event;		public class Clock extends MovieClip {				public var currentTime : Date;		public var startTime : Number;		public var elapsed : Number;		public var secondsRemaining : Number;		public var millisecondsRemaining : Number;				public function Clock() {			tf1.text = "2";			tf2.text = tf4.text = tf5.text = "0";		}				public function countdown() : void {			var date : Date = new Date();			startTime = date.getTime();			addEventListener(Event.ENTER_FRAME, _oef);		}				public function halt() : void {			if (hasEventListener(Event.ENTER_FRAME)) removeEventListener(Event.ENTER_FRAME, _oef);		}				protected function _oef( $e : Event ) : void {			currentTime = new Date();			elapsed = currentTime.getTime() - startTime;			secondsRemaining = 19 - Math.floor(elapsed / 1000);			millisecondsRemaining = 1000 - elapsed % 1000;						tf1.text = (secondsRemaining >= 10) ? "1" : "0";			tf2.text = String(secondsRemaining % 10);			tf4.text = String(millisecondsRemaining).substr(0, 1);			tf5.text = String(millisecondsRemaining).substr(1, 1);						if (secondsRemaining < 0) {				tf1.text = tf2.text = tf4.text = tf5.text = "0";				dispatchEvent( new Event("timeExpired", true, false) );				removeEventListener(Event.ENTER_FRAME, _oef);			}						displaceOnes();		}				public function reset() : void {			tf1.text = "2";			tf2.text = tf4.text = tf5.text = "0";			displaceOnes();		}				public function displaceOnes() : void {			(tf1.text == "1") ? tf1.x = 15 : tf1.x = 6;			(tf2.text == "1") ? tf2.x = 34 : tf2.x = 25;			(tf4.text == "1") ? tf4.x = 60 : tf4.x = 51;			(tf5.text == "1") ? tf5.x = 79 : tf5.x = 70;		}	}	}