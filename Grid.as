package  {		import flash.display.MovieClip;		public class Grid extends MovieClip {				public var tiles : Array;				public function Grid() {			generate();		}				public function generate() : void {			createTiles();			setNeighbors();			setMines();			setNumbers();		}				public function createTiles() : void {			tiles = new Array();			var i : int;			var j : int;			for (i=0; i<10; i++) {				for (j=0; j<10; j++) {					var tile : Tile = new Tile();					tile.x = j * 20;					tile.y = i * 20;					tile.tile_id = j + i * 10;					addChild(tile);					tiles[j+i*10] = tile;				}			}		}				public function setNeighbors() : void {			var i : int;			for (i=0; i<tiles.length; i++) {				var tile : Tile = tiles[i];				if (i >= 10 && i % 10 >= 1) tile.neighbors.push( tiles[i-11] ); // Northwest				if (i >= 10) tile.neighbors.push( tiles[i-10] ); 				// North				if (i >= 10 && i % 10 < 9) tile.neighbors.push( tiles[i-9] ); 	// Northeast				if (i % 10 >= 1) tile.neighbors.push( tiles[i-1] ); 			// West				if (i % 10 < 9) tile.neighbors.push( tiles[i+1] ); 				// East				if (i < 90 && i % 10 >= 1) tile.neighbors.push( tiles[i+9] ); 	// Southwest				if (i < 90) tile.neighbors.push( tiles[i+10] ); 				// South				if (i < 90 && i % 10 < 9) tile.neighbors.push( tiles[i+11] ); 	// Southeast			}		}				public function setMines() : void {			var i : int;			var array : Array = new Array();			for (i=0; i<100; i++) { array[i] = i; }			var j : int;			while (j < 20) {				var rand : int = Math.floor(Math.random()*100);				if (!Tile(tiles[rand]).isMine) {					Tile(tiles[rand]).isMine = true;					j++;				}			}		}				public function setNumbers() : void {			var i : int;			for (i=0; i<tiles.length; i++) {				var tile : Tile = tiles[i];				tile.init();			}		}				public function reset() : void {			var i : int;			for (i=0; i<tiles.length; i++) {				Tile(tiles[i]).kill();				removeChild(Tile(tiles[i]));			}			generate();		}	}	}